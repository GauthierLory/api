{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <!--our content goes here-->
        <div class="row">
            <div class="col-lg-3 col-md-0 row-sm">
                {{ include('profile/profile_sidebar.html.twig') }}
            </div>
            <div class="col-lg-9 col-md-5">
                <div class="card">
                    <div class="card-body">
                        <div class="profile-content">
                            <ul class="nav nav-tabs">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#home">{{ 'profile.article'|trans }}</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('profile_comment') }}">{{ 'profile.comment'|trans }}</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div class="tab-pane container active" id="home">
                                    {% if user.articles|length > 0 %}
                                        <table id="" class="display">
                                            <thead>
                                            <th>Title</th>
                                            <th>Tag</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                            </thead>
                                            <tbody>
                                            {% for article in user.articles %}
                                                <tr>
                                                    <td>{{ article.title }}</td>
                                                    <td>{{ article.tag.name }}</td>
                                                    <td>{{ article.description|raw }}</td>
                                                    <td>
                                                        <a class="btn btn-success btn-sm" href="{{ path('article_show', {'slug': article.slug, 'id': article.id } ) }}">{{ 'btn.show'|trans }}</a>
                                                        <a class="btn btn-warning btn-sm" href="{{ path('article_edit', {'slug': article.slug,'id': article.id}) }}">{{ 'btn.edit'|trans }}</a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            {% else %}
                                                <td> Aucune donn√©e </td>
                                            </tbody>
                                        </table>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
