{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <!--our content goes here-->
    <div class="container content">
        <div class="row profile">
            <div class="col-md-3">
                <div class="profile-sidebar position-fixed">

                    <div class="profile-userpic">
                        <img src="{{ app.user.avatar }}" class="img-responsive" alt="">
                    </div>

                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">
                            {{ app.user.nom }} {{ app.user.prenom }}
                        </div>
                        <div class="profile-usertitle-job">
                            {{ app.user.email }}
                        </div>
                    </div>

                    {#<div class="profile-userbuttons">#}
                        {#<button type="button" class="btn btn-success btn-sm">Follow</button>#}
                        {#<button type="button" class="btn btn-danger btn-sm">Message</button>#}
                    {#</div>#}

                    <div class="profile-usermenu sidebar-sticky">
                        <ul class="nav flex-column">
                            <li class="active nav-item">
                                <a href="#" class="nav-link active">
                                    <i class="fa fa-home"></i>
                                    Overview </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('profile_account', {'id':user.id}) }}">
                                    {#<a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>#}
                                    <i class="fa fa-user"></i>
                                    Account Settings </a>
                            </li>
                        </ul>
                    </div>
                    <!-- END MENU -->
                </div>
            </div>
            <div class="col-md-9">
                <div class="profile-content">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#home">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#menu1">Review</a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane container active" id="home">
                            {% for product in user.products %}
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ product.title }}</td>
                                    </tr>
                                    <tr>
                                        <th>descripption</th>
                                        <td>{{ product.description }}</td>
                                    </tr>
                                    <tr>
                                        <td><a class="btn btn-success btn-sm" href="{{ path('product_show', {'id': product.id}) }}">See</a></td>
                                    </tr>
                                    </tbody>
                                </table>
                            {% endfor %}
                        </div>
                        <div class="tab-pane container fade" id="menu1">
                            {% for review in user.reviews %}
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ review.rating }}</td>
                                    </tr>
                                    <tr>
                                        <th>descripption</th>
                                        <td>{{ review.description }}</td>
                                    </tr>
                                    <tr>
                                        <td><a class="btn btn-success btn-sm" href="{{ path('review_show', {'id': review.id}) }}">See</a></td>
                                    </tr>
                                    </tbody>
                                </table>
                            {% endfor %}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
