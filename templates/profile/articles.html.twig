{% block body %}
    {% block title %}Hello ProfileController!{% endblock %}
<div class="card">
    <div class="card-body">
        <table id="" class="display table table-hover">
            <thead>
            <tr>
                <th>Title</th>
                <th>Tag</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in user.articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>{{ article.tag.name }}</td>
                    <td>
                        <a class="btn btn-success btn-sm" href="{{ path('article_show', {'slug': article.slug, 'id': article.id}) }}">show</a>
                        <a class="btn btn-warning btn-sm" href="{{ path('article_edit', {'slug': article.slug,'id': article.id}) }}">edit</a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}