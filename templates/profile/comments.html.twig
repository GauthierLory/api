{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <!--our content goes here-->
    <div class="row">
        <div class="col-lg-3 col-md-0 row-sm">
            {{ include('profile/profile_sidebar.html.twig') }}
        </div>
        <div class="col-lg-9 col-md-5">
            <div class="card">
                <div class="card-body">
                    <div class="profile-content">
                        <ul class="nav nav-tabs">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('profile_article') }}">{{ 'profile.article'|trans }}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#menu1">{{ 'profile.comment'|trans }}</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane container active" id="menu1">
                                {% if user.comments|length > 0 %}
                                <table id="" class="display">
                                <thead>
                                <th>Rating</th>
                                <th>Article title</th>
                                <th>Actions</th>
                                </thead>
                                <tbody>
                                {% for comment in user.comments %}
                                <tr>
                                <td>{{ comment.rating }}</td>
                                <td>{{ comment.article.title }}</td>
                                <td><a class="btn btn-success btn-sm" href="{{ path('comment_show', {'id': comment.id}) }}">See</a></td>
                                </tr>
                                {% endfor %}
                                {% else %}
                                <td> Aucune donn√©e </td>
                                </tbody>
                                </table>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
