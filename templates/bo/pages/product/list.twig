{% extends 'bo/layout/base.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1>Liste des articles</h1>
        </div>
        <div class="card-body">
            <div id="productTable">Loading...</div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(function() {
            $('#productTable').initDataTables({{ datatable_settings(datatable) }});
        });
    </script>
{% endblock %}