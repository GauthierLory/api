{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h1>Article index</h1>
    </div>
    <div class="card-body">
        <a class="btn btn-primary btn-sm" href="{{ path('article_new') }}">Create new</a>
        <table id="tableAdmin" class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Tag</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.tag.name }}</td>
                    <td>{{ article.description }}</td>
                    <td>
                        <a class="btn btn-success btn-sm" href="{{ path('article_show', {'slug': article.slug, 'id': article.id}) }}">show</a>
                        <a class="btn btn-warning btn-sm" href="{{ path('article_edit', {'slug': article.slug,'id': article.id}) }}">edit</a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
