{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

    <div class="">
        <div class="card my-3">
            <div class="card-header">
                {% if is_granted('ROLE_USER') and app.user == article.getUser() %}
                <a class="btn btn-warning btn-sm" href="{{ path('article_edit', {'slug': article.slug,'id': article.id}) }}">edit</a>
                {% endif %}
                <h5><a class="btn btn-primary" href="{{ path('article_index') }}"><i class="fas fa-arrow-alt-circle-left"></i></a> Article n°{{ article.id | default ('id null')}}</h5>
                <span class="rating">Moyenne :  </span>
                {% if article.comments|length >0%}
                    {% if article.moyenne > 0 %}
                        {% set rating = article.moyenne %}
                        {% include 'article/rating.html.twig' %}
                    {% endif %}
                {% else %}
                    <p>pas de note</p>
                {% endif %}

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4">
                        <p class="card-text">
                            User : {{ article.user.email }}
                        <hr>Title : {{ article.title }}
                        <hr>Tag : {{ article.tag.name }}
                        <hr>Le : {{ article.createdAt|date('d/m/Y') }}
                        <hr>Description :{{ article.description | raw }}
                        </p>
                    </div>
                    <div class="col-lg-8">
                        <div class="row">{{ article.content }}</div>
                        {#<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">#}
                            {#<ol class="carousel-indicators">#}
                                {#<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>#}
                                {#<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>#}
                                {#<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>#}
                            {#</ol>#}
                            {#<div class="carousel-inner">#}
                                {#<div class="carousel-item active">#}
                                    {#<img class="d-block w-100" src="https://lorempixel.com/350/350" alt="First slide">#}
                                {#</div>#}
                                {#<div class="carousel-item">#}
                                    {#<img class="d-block w-100" src="https://lorempixel.com/350/350" alt="Second slide">#}
                                {#</div>#}
                                {#<div class="carousel-item">#}
                                    {#<img class="d-block w-100" src="https://lorempixel.com/350/350" alt="Third slide">#}
                                {#</div>#}
                            {#</div>#}
                            {#<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">#}
                                {#<span class="carousel-control-prev-icon" aria-hidden="true"></span>#}
                                {#<span class="sr-only">Previous</span>#}
                            {#</a>#}
                            {#<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">#}
                                {#<span class="carousel-control-next-icon" aria-hidden="true"></span>#}
                                {#<span class="sr-only">Next</span>#}
                            {#</a>#}
                        {#</div>#}
                    </div>
                </div>
            </div>
        </div>

            <hr>
            {#<div class="row">#}
                {% for comment in article.comments %}
                <div class="row">
                    {#<div class="col-lg-3 col-md-6 col-sm-12">#}
                        <div class="card my-3">
                            <div class="card-header p-3 mb-2 bg-primary text-white">
                                <div class="row">
                                    <div class="col-md-2">
                                        <strong>{{ comment.author.username }}</strong>
                                    </div>
                                    <div class="col-md-2">
                                        <strong>le {{ comment.createdAt|date('d/m/Y') }} à {{ comment.createdAt|date('H:m') }}</strong>
                                    </div>
                                    <div class="col-md-2">
                                        {#<strong>{{ comment.author.username }}</strong>#}
                                        {% set rating = comment.rating %}
                                        {% include 'article/rating.html.twig' %}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <p>{{ comment.description|raw}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                {% endfor %}
            {#</div>#}

            <div class="card-body mb-3">
                {% set comment = article.commentFromAuthor(app.user) %}
                {% if comment is not null %}
                    <div class="row">
                        <div class="col-md-3">
                            <div class="row"><small>le {{ comment.createdAt|date('d/m/Y') }} à {{ comment.createdAt|date('H:m') }}</small></div>
                            <div class="row"> <strong>Note : </strong>{% include 'article/rating.html.twig' with{'rating': comment.rating} %}</div>
                            <div class="row"><a class="btn btn-warning btn-sm" href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a></div>
                        </div>
                        <div class="col-md-9">
                            <blockquote>
                                {{ comment.description | raw }}
                            </blockquote>
                        </div>
                    </div>
                {% else %}
                    <div class="card-body">
                        {{ include('comment/_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
    </div>
{% endblock %}
