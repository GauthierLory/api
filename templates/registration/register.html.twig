{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}

{% endblock %}
{% block body %}
    <div class="d-flex mt-4 mb-4">
        <hr class="my-auto flex-grow-1">
        <div class="px-4"><h1>{{ 'app.register'|trans }}</h1></div>
        <hr class="my-auto flex-grow-1">
    </div>

        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-row">
            <div class="form-group col-md-6">{{ form_row(form.nom) }}</div>
            <div class="form-group col-md-6">{{ form_row(form.prenom) }}</div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">{{ form_row(form.plainPassword.first) }}</div>
            <div class="form-group col-md-6">{{ form_row(form.plainPassword.second) }}</div>
        </div>
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <div class="form-group">
            {{ form_rest(form) }}
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
        {{ form_end(form) }}
{% endblock %}
