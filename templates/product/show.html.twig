{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>User</th>
                <td>{{ product.user.email }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}

    <h4>Reviews :</h4>
    {{ include('review/_form.html.twig') }}
    {% for review in product.reviews %}
        <div class="card px-3 mt-5">
            <table class="table">
            <tbody>
            <tr>
                <th>Author</th>
                <td>{{ review.author.email }}</td>
                <th>Rating</th>
                <td>{{ review.rating }}</td>
            </tr>
            <tr>
                <th>comment</th>
                <td>{{ review.description }}</td>
            </tr>
            </br>
            </tbody>
        </table>
        </div>
    {% endfor %}

{% endblock %}
