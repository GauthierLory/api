{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="">
        <div class="card my-3">
            <div class="card-header">
                <h5> Product nÂ°{{ product.id }}</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4">
                        <p class="card-text">User : {{ product.user.email }}<hr>Title : {{ product.title }}<hr>
                                            Tag : {{ product.tag.name }}<hr>Description :{{ product.description }}</p>
                    </div>
                    <div class="col-lg-8">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="https://lorempixel.com/350/350" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="https://lorempixel.com/350/350" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="https://lorempixel.com/350/350" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <hr>
            <div class="row">
                {% for review in product.reviews %}
                    <div class="col-lg-3 col-md-6 col-sm-12">
                        <div class="card my-3">
                            <div class="card-header p-3 mb-2 bg-primary text-white">Author {{ review.author.email }}, Rating {{ review.rating }} </div>
                            <div class="card-body">
                                <p>{{ review.description }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Reviews :</h5>
                </div>
                <div class="card-body">
                    {{ include('review/_form.html.twig') }}
                </div>
            </div>
    </div>
{% endblock %}
