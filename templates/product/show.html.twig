{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}

    <div class="">
        <div class="card my-3">
            <div class="card-header">
                <h5><a class="btn btn-primary" href="{{ path('product_index') }}"><i class="fas fa-arrow-alt-circle-left"></i></a> Product nÂ°{{ product.id | default ('id null')}}</h5>
                <span class="rating">Moyenne :  </span>
                {% if product.reviews|length >0%}
                    {% if product.moyenne > 0 %}
                        {% set rating = product.moyenne %}
                        {% include 'product/rating.html.twig' %}
                    {% endif %}
                {% else %}
                    <p>pas de note</p>
                {% endif %}

            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-4">
                        <p class="card-text">User : {{ product.user.email }}<hr>Title : {{ product.title }}<hr>
                                            Tag : {{ product.tag.name }}<hr>Description :{{ product.description | raw }}</p>
                    </div>
                    <div class="col-lg-8">
                        {#<!-- 1. Link to jQuery (1.8 or later), -->#}
                        {#<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script> <!-- 33 KB -->#}

                        {#<!-- fotorama.css & fotorama.js. -->#}
                        {#<link  href="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.css" rel="stylesheet"> <!-- 3 KB -->#}
                        {#<script src="http://cdnjs.cloudflare.com/ajax/libs/fotorama/4.6.4/fotorama.js"></script> <!-- 16 KB -->#}

                        {#<!-- 2. Add images to <div class="fotorama"></div>. -->#}
                        {#{% for image in product.images %}#}
                        {#<div class="fotorama">#}
                            {#<img src="{{ vich_uploader_asset(image, 'imageFile') }}">#}
                            {#{% endfor %}#}
                        {#</div>#}

                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="https://lorempixel.com/350/350" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="https://lorempixel.com/350/350" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="https://lorempixel.com/350/350" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <hr>
            {#<div class="row">#}
                {% for review in product.reviews %}
                <div class="row">
                    {#<div class="col-lg-3 col-md-6 col-sm-12">#}
                        <div class="card my-3">
                            <div class="card-header p-3 mb-2 bg-primary text-white">
                                <div class="row">
                                    <div class="col-md-2">
                                        <strong>{{ review.author.username }}</strong>
                                    </div>
                                    <div class="col-md-2">
                                        <strong>{{ review.createdAt|date('d/m/Y') }}</strong>
                                    </div>
                                    <div class="col-md-2">
                                        {#<strong>{{ review.author.username }}</strong>#}
                                        {% set rating = review.rating %}
                                        {% include 'product/rating.html.twig' %}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <p>{{ review.description|raw}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                {% endfor %}
            {#</div>#}

            <div class="card mb-3">
                {% set review = product.commentFromAuthor(app.user) %}
                {% if review is not null %}
                    <div class="row">
                        <div class="col">
                            <blockquote>
                                {{ review.description | raw }}
                            </blockquote>
                            <strong>Note : </strong>{% include 'product/rating.html.twig' with{'rating': review.rating} %}
                        </div>
                        <div class="col">
                            <a class="btn btn-warning btn-sm" href="{{ path('review_edit', {'id': review.id}) }}">edit</a>
                        </div>
                    </div>


                {% else %}
                    <div class="card-body">
                        {{ include('review/_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
    </div>
{% endblock %}
